<div class="max-w-4xl mx-auto p-6">
  <h1 class="text-3xl font-bold mb-8 text-center">ユーザーページ</h1>

  <article class="bg-white shadow-lg rounded-xl p-6 mb-10 border border-orange-200">
    <%= render 'shared/user_show' %>
  </article>

  <article class="bg-white shadow-lg rounded-xl p-6 border border-orange-200">
    <h2 class="text-2xl font-semibold text-gray-700 mb-6">応募一覧</h2>

    <% if current_user.posts.any? %>
    <ul class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <% current_user.posts.each do |post| %>
      <%= render 'shared/post', post: post, detail_path: proposal_post_path(post) %>
      <% end %>
    </ul>
    <% else %>
    <p class="text-gray-500">応募がありません。</p>
    <% end %>
    <% if !time_limit? %>
      <div class="mt-6 text-center">
        <%= link_to '新規応募', new_proposal_post_path, class: "inline-block bg-orange-500 text-white px-5 py-2 rounded-lg text-lg shadow-md hover:bg-orange-600 transition" %>
      </div>
    <% end %>
  </article>
</div>