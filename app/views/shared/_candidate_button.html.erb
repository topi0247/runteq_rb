<% if current_user.candidate?(post) %>
  <%= link_to admin_candidate_path(current_user.candidates.find_by(post_id: post.id)), data: { turbo_method: :delete } do %>
    <i class="fas fa-heart unlike-btn text-pink-500"></i>
  <% end %>
<% else %>
  <%= link_to admin_candidates_path(post_id: post.id), data: { turbo_method: :post } do %>
    <i class="far fa-heart like-btn" ></i>
  <% end %>
<% end %>
<%= post.candidates.count %>