<section class="relative border-l-4 border-orange-400">
  <div class="pb-10 ml-6">
    <span class="absolute w-6 h-6 bg-orange-400 rounded-full -left-3.5"></span>
    <% unless time.blank? %>
    <time class="block mb-2 text-sm font-semibold text-gray-600"><%= time %></time>
    <% end %>
    <div class="border border-orange-300 p-5 rounded">
      <div class="flex items-center space-x-4">
        <img src="<%= post.user.image_url %>" alt="icon" class="w-16 h-16 rounded-full object-cover">
        <div>
          <p class="font-bold text-orange-400"><%= post.user.name %></p>
          <a href="https://x.com/<%= post.user.x_id %>" class="text-sm text-blue-500 block"><%= post.user.x_id %></a>
          <a href="<%= post.user.social_portfolio_url %>" class="text-sm text-blue-500 hover:underline block">ソシャポ</a>
        </div>
      </div>
      <h3 class="font-bold text-lg text-orange-400 mt-4"><%= post.title %></h3>
      <p class="text-gray-700 mb-2 break-words">
        <%= post.content %>
      </p>
      <% unless post.user.comment.blank? %>
      <h4 class="font-bold text-orange-400 mt-4">登壇者コメント</h4>
      <p class="text-gray-700 mb-2 break-words">
        <%= post.user.comment %>
      </p>
      <% end %>
      <div class="flex space-x-2 text-sm">
        <span class="px-2 py-1 bg-gray-200 rounded"><%= post.presentation_category_i18n %></span>
        <span class="px-2 py-1 bg-gray-200 rounded"><%= post.target_category_i18n %></span>
      </div>
    </div>
  </div>
</section>