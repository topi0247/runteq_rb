    <img src="<%= user.image_url %>" alt="icon" class="rounded-full aspect-square object-cover">
  </div>
  <div class="text-center">
    <div class="flex items-center justify-center gap-2">
      <h3 class="text-xl font-bold text-orange-400"><%= user.name %></h3>
      <a href="https://x.com/<%= user.x_id %>" class="text-sm text-blue-500 block" target="_blank"><%= post.user.x_id %></a> / 
      <a href="<%= user.social_portfolio_url %>" class="text-sm text-blue-500 hover:underline block" target="_blank">ソシャポ</a>
    </div>
    <p class="text-start break-all"><%= user.comment %></p>
  </div>
</div>