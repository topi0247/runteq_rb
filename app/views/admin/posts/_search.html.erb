<div class="mb-6">
  <%= form_with url: admin_posts_path, method: :get, local: true, class: "bg-white p-4 rounded-xl shadow-md border border-orange-200" do %>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
      <div>
        <%= label_tag :presentation_category, "登壇枠", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= select_tag :presentation_category,
              options_for_select(Post.presentation_categories.keys.map { |k| [k.humanize, k] }, params[:presentation_category]),
              include_blank: "すべて",
              class: "w-full border-gray-300 rounded-md shadow-sm p-2 cursor-pointer hover:bg-orange-50 transition" %>
      </div>
      <div>
        <%= label_tag :target_category, "ターゲット層", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= select_tag :target_category,
              options_for_select(Post.target_categories.keys.map { |k| [k.humanize, k] }, params[:target_category]),
              include_blank: "すべて",
              class: "w-full border-gray-300 rounded-md shadow-sm p-2 cursor-pointer hover:bg-orange-50 transition" %>
      </div>
    </div>
    <div class="mt-4 text-right">
      <%= submit_tag "確認", class: "bg-orange-500 text-white font-bold py-2 px-4 rounded border border-orange-500 hover:bg-white hover:text-orange-500 transition" %>
    </div>
  <% end %>
</div>